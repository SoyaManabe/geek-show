extends layout

block content
    form(method="post", action="/books").my-3
        input(type="hidden" name="_csrf" value!=csrfToken)
        div.form-group
            label(for="bookName") Title of the book
            input(type="text" name="bookName")#bookName.form-control
        div.form-group
            label(for="tag") Tag
            input(type="text" name="tag")#tag.form-control
        div.form-group
            label(for="memo") Memo
            textarea(name="memo" rows="4")#memo.form-control
        button(type="submit").btn.btn-info Shelf!!